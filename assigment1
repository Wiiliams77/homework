using System;
using System.Windows.Forms;

namespace CalculatorWinForms
{
    public partial class Form1 : Form
    {
        public Form1()
        {
            InitializeComponent();
        }

        private void Form1_Load(object sender, EventArgs e)
        {
            // 设置运算符选择框
            comboBox1.Items.Add("+");
            comboBox1.Items.Add("-");
            comboBox1.Items.Add("*");
            comboBox1.Items.Add("/");
            comboBox1.SelectedIndex = 0; // 默认选择加法
        }

        private void button1_Click(object sender, EventArgs e)
        {
            // 获取输入的数字和运算符
            double num1, num2, result = 0;
            bool isValid = double.TryParse(textBox1.Text, out num1) && double.TryParse(textBox2.Text, out num2);

            if (!isValid)
            {
                MessageBox.Show("请输入有效的数字!", "错误", MessageBoxButtons.OK, MessageBoxIcon.Error);
                return;
            }

            string operation = comboBox1.SelectedItem.ToString();

            // 执行计算
            switch (operation)
            {
                case "+":
                    result = num1 + num2;
                    break;
                case "-":
                    result = num1 - num2;
                    break;
                case "*":
                    result = num1 * num2;
                    break;
                case "/":
                    if (num2 != 0)
                    {
                        result = num1 / num2;
                    }
                    else
                    {
                        MessageBox.Show("错误：除数不能为零!", "错误", MessageBoxButtons.OK, MessageBoxIcon.Error);
                        return;
                    }
                    break;
            }

            // 显示结果
            label1.Text = $"结果: {result}";
        }
    }
}

